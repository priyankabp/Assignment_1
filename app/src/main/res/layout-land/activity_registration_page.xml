<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.assignment_1.RegistrationPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/Registration_UserName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:hint="@string/caption_hint_Registration_editText_userName" />

        <EditText
            android:id="@+id/Registration_SName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:hint="@string/caption_hint_Registration_editText_name" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/Registration_SMajor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:hint="@string/caption_hint_Registration_editText_major" />

        <EditText
            android:id="@+id/Registration_Email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:hint="@string/caption_hint_Registration_editText_email" />

        <EditText
            android:id="@+id/Registration_DoB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:hint="@string/caption_hint_Registration_editText_DoB" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/Registration_password1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:hint="@string/caption_hint_Registration_editText_password1" />

        <EditText
            android:id="@+id/Registration_password2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:hint="@string/caption_hint_Registration_editText_password2" />

        <Button
            android:id="@+id/Registration_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0FFF"
            android:text="@string/caption_Registration_button" />


    </LinearLayout>

</ScrollView>