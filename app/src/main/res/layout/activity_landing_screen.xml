<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.assignment_1.LandingScreen">

    <TextView
        android:id="@+id/landing_screen_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/caption_landing_screen_textView"
        android:textColor="@color/editorColorPrimary"
        android:textSize="20sp" />

    <Button
        android:text="@string/log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logOut_button"
        android:onClick="onLogOutClick"/>

    <TextView
        android:id="@+id/landing_screen_text_view_student"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
