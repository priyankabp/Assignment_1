<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.assignment_1.RegistrationPage">

     <EditText
        android:id="@+id/Registration_userName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
         android:inputType="text"
        android:hint="@string/caption_hint_Registration_editText_userName" />

    <EditText
        android:id="@+id/Registration_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:inputType="text"
        android:hint="@string/caption_hint_Registration_editText_name" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <!--<EditText
        android:id="@+id/Registration_major"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:hint="@string/caption_hint_Registration_editText_major" />-->

    <Spinner
        android:id="@+id/Registration_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/Registration_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:inputType="textWebEmailAddress"
        android:hint="@string/caption_hint_Registration_editText_email" />

    <EditText
        android:id="@+id/Registration_DoB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:hint="@string/caption_hint_Registration_editText_DoB"/>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <EditText
        android:id="@+id/Registration_password1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:inputType="textPassword"
        android:hint="@string/caption_hint_Registration_editText_password1" />

    <EditText
        android:id="@+id/Registration_password2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:inputType="textPassword"
        android:hint="@string/caption_hint_Registration_editText_password2" />

    <Button
        android:id="@+id/Registration_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0FFF"
        android:text="@string/caption_Registration_button"
        android:onClick="onRegisterClick"/>



</LinearLayout>
